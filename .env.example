SERVER_PORT=8080

# Server timeouts (Go duration format, e.g. 10s, 2m)
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=5s

# Database: choose driver
DB_DRIVER=postgres # postgres|sqlite

# Postgres
DB_URL="host=localhost user=postgres dbname=default port=5432 sslmode=disable"

# SQLite (required if DB_DRIVER=sqlite)
# DB_SQLITE_PATH="file:redirector.db?_pragma=journal_mode(WAL)"

DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# Features
# CountViews
FEATURE_COUNT_VIEWS_ENABLED=true
FEATURE_COUNT_VIEWS_ASYNC_TIMEOUT=2s
